            RecipeFinder CHANGER = new RecipeFinder();
            CHANGER = new RecipeFinder();
            CHANGER.AddIngredient(ItemID.INGREDIENT, STACK);
            CHANGER.AddRecipeGroup("INGREDIENTGROUP", STACK);
            CHANGER.AddTile(TileID.CRAFTINGSTATION);
            CHANGER.SetResult(ItemID.RESULT);
            Recipe CHANGERR = CHANGER.FindExactRecipe();
            if (CHANGERR != null)
            {
                RecipeEditor CHANGEE = new RecipeEditor(CHANGERR);
                CHANGEE.DeleteRecipe();
            }

            ModRecipe TeBl = new ModRecipe(this);
                TeBl.AddIngredient(ItemID.TrueNightsEdge);
                TeBl.AddIngredient(ItemID.TrueExcalibur);
                TeBl.AddIngredient(ItemID.BrokenHeroSword);
                TeBl.AddTile(TileID.MythrilAnvil);
                TeBl.SetResult(ItemID.TerraBlade);
                TeBl.AddRecipe();

